<AnchorPane prefHeight="520.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Homepage">
   <children>
      <TabPane prefHeight="520.0" prefWidth="900.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Customers">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Text layoutX="402.0" layoutY="55.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Customers">
                           <font>
                              <Font size="21.0" />
                           </font>
                        </Text>
                        <TableView fx:id="customerTable" layoutX="38.0" layoutY="84.0" prefHeight="305.0" prefWidth="827.0">
                          <columns>
                            <TableColumn fx:id="customerIdColumn" prefWidth="82.0" text="Customer ID" />
                            <TableColumn fx:id="customerNameColumn" prefWidth="133.0" text="Customer Name" />
                              <TableColumn fx:id="customerNumberColumn" prefWidth="128.0" text="Phone Number" />
                              <TableColumn fx:id="customerAddressColumn" prefWidth="139.0" text="Address" />
                              <TableColumn fx:id="customerDivisionColumn" prefWidth="135.0" text="State/Province" />
                              <TableColumn fx:id="customerCountryColumn" prefWidth="114.0" text="Country" />
                              <TableColumn fx:id="customerPostalCodeColumn" prefWidth="95.0" text="Postal Code" />
                          </columns>
                        </TableView>
                        <Button fx:id="addCustomerButton" layoutX="70.0" layoutY="420.0" mnemonicParsing="false" onAction="#goToAddCustomer" prefHeight="33.0" prefWidth="180.0" text="Add Customer" />
                        <Button fx:id="editCustomerButton" layoutX="361.0" layoutY="420.0" mnemonicParsing="false" onAction="#goToEditCustomer" prefHeight="33.0" prefWidth="180.0" text="Edit Customer" />
                        <Button fx:id="deleteCustomerButton" layoutX="650.0" layoutY="420.0" mnemonicParsing="false" onAction="#deleteCustomer" prefHeight="33.0" prefWidth="180.0" text="Delete Customer" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Appointments">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Text layoutX="388.0" layoutY="55.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Appointments" textAlignment="CENTER">
                           <font>
                              <Font size="21.0" />
                           </font>
                        </Text>
                        <TableView fx:id="appointmentTable" layoutX="38.0" layoutY="84.0" prefHeight="305.0" prefWidth="827.0">
                           <columns>
                              <TableColumn fx:id="appointmentIDColumn" prefWidth="57.0" text="Appt. ID" />
                              <TableColumn fx:id="appointmentTitleColumn" prefWidth="63.0" text="Title" />
                              <TableColumn fx:id="appointmentDescriptionColumn" prefWidth="110.0" text="Description" />
                              <TableColumn fx:id="appointmentLocationColumn" prefWidth="70.0" text="Location" />
                              <TableColumn fx:id="appointmentTypeColumn" prefWidth="66.0" text="Type" />
                              <TableColumn fx:id="appointmentStartColumn" minWidth="0.0" prefWidth="126.0" text="Start Date and Time" />
