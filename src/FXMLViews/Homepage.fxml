                        <Button fx:id="editAppointmentButton" layoutX="361.0" layoutY="420.0" mnemonicParsing="false" prefHeight="33.0" prefWidth="180.0" text="Edit Appointment" />
                        <Button fx:id="deleteAppointmentButton" layoutX="650.0" layoutY="420.0" mnemonicParsing="false" prefHeight="33.0" prefWidth="180.0" text="Delete Appointment" />
                     </children></AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
